{
  "compilerOptions": {
    "outDir": "build",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "strict": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,       
    "sourceMap": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "src/*": ["src/*"],
    }
  }, 
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "jest"
  ],
}